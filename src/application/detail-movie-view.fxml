<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WatchListController">
    
    <!-- Header Section -->
    <top>
        <HBox styleClass="header" alignment="CENTER" spacing="20">
            <Label text="ðŸ“š My Watch List" styleClass="header-title" />
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <StackPane>
            <!-- Empty State Message -->
            <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="20" visible="false">
                <Label text="ðŸŽ­" style="-fx-font-size: 48px;" />
                <Label fx:id="emptyLabel" text="Your watch list is empty" 
                       style="-fx-font-size: 24px; -fx-font-weight: 600; -fx-text-alignment: center;" />
                <Label text="Add some movies to get started!" 
                       style="-fx-font-size: 16px; -fx-text-fill: rgba(255,255,255,0.7); -fx-text-alignment: center;" />
            </VBox>
            
            <!-- Watch List Content -->
            <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" 
                       hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                <VBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 40;">
                    
                    <!-- Statistics Bar -->
                    <HBox alignment="CENTER" spacing="40" 
                          style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 20; -fx-padding: 20 40;">
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="totalMoviesLabel" text="0" 
                                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                            <Label text="Total Movies" 
                                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);" />
                        </VBox>
                        
                        <Separator orientation="VERTICAL" />
                        
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="totalRuntimeLabel" text="0h 0m" 
                                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                            <Label text="Total Runtime" 
                                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);" />
                        </VBox>
                        
                        <Separator orientation="VERTICAL" />
                        
                        <VBox alignment="CENTER" spacing="5">
                            <Label fx:id="avgRatingLabel" text="0.0" 
                                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                            <Label text="Avg Rating" 
                                   style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);" />
                        </VBox>
                    </HBox>
                    
                    <!-- Movies Grid -->
                    <FlowPane fx:id="watchListTilePane" alignment="CENTER" 
                             hgap="25" vgap="25" columnHalignment="CENTER" 
                             style="-fx-padding: 20 0;" />
                    
                </VBox>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>