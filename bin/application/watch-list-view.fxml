<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.WatchListController" spacing="0">
    <HBox styleClass="header" alignment="CENTER">
        <Label text="My Watch List" styleClass="header-title" />
    </HBox>
    
    <Label fx:id="emptyLabel" text="Your watch list is empty" style="-fx-font-size: 18px; -fx-padding: 20; -fx-alignment: CENTER;" visible="false" />
    
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
        <TilePane fx:id="watchListTilePane" hgap="20" vgap="20" prefColumns="4" styleClass="tile-pane" />
    </ScrollPane>
</VBox>